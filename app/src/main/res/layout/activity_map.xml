<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MapView para mostrar el mapa -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Botón para ver el historial -->
    <Button
        android:id="@+id/btn_view_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_history"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@android:color/white" />

    <!-- Botón para activar/desactivar notificaciones -->
    <Button
        android:id="@+id/btn_toggle_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toggle_notifications"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@android:color/white" />

</RelativeLayout>
